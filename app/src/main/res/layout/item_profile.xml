<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/et_borders"
    >

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/writing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profile name"
        app:layout_constraintTop_toTopOf="@id/iv_image"
        app:layout_constraintStart_toEndOf="@id/iv_image"/>


    <LinearLayout
        android:id="@+id/layout_n_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        app:layout_constraintTop_toBottomOf="@id/tv_name">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/posting"/>
        <TextView
            android:id="@+id/tv_n_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_n_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_n_posts"
        app:layout_constraintStart_toEndOf="@id/iv_image">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/like"/>
        <TextView
            android:id="@+id/tv_n_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>